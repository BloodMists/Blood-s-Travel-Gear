package com.Bloods.BloodTG.configs;

import java.io.File;
import net.minecraftforge.common.config.Configuration;

public class configHandler
{
	public static void init(File configFile)
	{
		Configuration configuration = new Configuration(configFile);
		boolean configValue = false;
		try
		{
			configuration.load(); //Load in config file
			
			configValue = configuration.get(Configuration.CATEGORY_GENERAL, "configValue", true, "config value goes here" ).getBoolean(true);
			//Read properties from config file
		}
		catch(Exception e)
		{	
			//Log exceptions
		}
		finally
		{
			if(configuration.hasChanged())
			{
			configuration.save(); //save config file
			}
		}
	  //System.out.print("Config test: " + configValue);
	}
	
}
